<h1>Chitter</h1>

<% if flash[:notice] %>
  <div id="notice">
    <%= flash[:notice] %>
  </div>
<% end %>
<% if flash[:errors] && !flash[:errors].empty? %>
  <ul id="errors">
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<form action="/sessions" id="sign_in_form" autocomplete="off" method="post">
  Username: <input class="reg_box" type="text" name="username">
  Password: <input class="reg_box" type="password" name="password">
  <input id="go_button" type="submit" value="Go!">
</form>